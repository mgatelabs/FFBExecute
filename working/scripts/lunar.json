{
  "vars": [

  ],
  "imports": [
    "_common-battle",
    "_common-menu_location",
    "_common-menu_results",
    "_common-no_op"
  ],
  "states": {

    "start": {
      "name": "Start Battle",
      "includes": [
        "_common-ml-mission",
        "_common-ml-goals",
        "_common-ml-depart",
        "_common-no_op"
      ],
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "MOVE",
              "value": "fight"
            }
          ]
        }
      ]
    },

    "wait": {
      "name": "Wait for end",
      "includes": [
        "_common_mr-points",
        "_common_mr-units",
        "_common_mr-items",
        "_common_mr-friend_request"
      ],
      "statements": [
        {
          "condition": {
            "is": "SCREEN", "value": "menu-missions-select"
          },
          "actions": [
            {
              "type": "MOVE",
              "value": "start"
            }
          ]
        }
      ]
    },

    "fight": {
      "name": "Fight",
      "includes": [
        "_common_mr-points",
        "_common_mr-units",
        "_common_mr-items",
        "_common_mr-friend_request",
        "_common-no_op"
      ],
      "variables": {
        "wave": {
          "type": "INT",
          "value": "1"
        },
        "ready": {
          "type": "INT",
          "value": "0"
        }
      },
      "statements": [

        /*
        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              {
                "is": "EQUAL",
                "var": "wave",
                "value": "5"
              }
            ]
          },
          "actions": [
            {
              "type": "MOVE",
              "value": "wait"
            }
          ]
        },
        */

        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              {
                "is": "EQUAL",
                "var": "ready",
                "value": "0"
              },
              { "is": "CALL", "value": "@isUnitReady", "args": {"index": "3"} },
              { "is": "CALL", "value": "@isUnitReady", "args": {"index": "4"} }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Wave ${wave} ready for battle"
            },
            {
              "type": "ADD",
              "var": "wave",
              "value": "1"
            },
            {
              "type": "SET",
              "var": "ready",
              "value": "1"
            }
          ]
        },

        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              {
                "is": "EQUAL",
                "var": "ready",
                "value": "1"
              },
              {
                "is": "LESS",
                "var": "wave",
                "value": "6"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Starting battle"
            },
            {
              "type": "TAP",
              "value": "battle-reload"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "4"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "5"
              }
            },
            {
              "type": "SET",
              "var": "ready",
              "value": "0"
            }
          ]
        },

        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              {
                "is": "EQUAL",
                "var": "ready",
                "value": "1"
              },
              {
                "is": "EQUAL",
                "var": "wave",
                "value": "6"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Starting battle"
            },
            {
              "type": "TAP",
              "value": "battle-reload"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "0"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "4"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "5"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "1"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "2"
              }
            },
            {
              "type": "SET",
              "var": "ready",
              "value": "0"
            }
          ]
        },

        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              {
                "is": "EQUAL",
                "var": "ready",
                "value": "1"
              },
              {
                "is": "EQUAL",
                "var": "wave",
                "value": "7"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Starting battle"
            },
            {
              "type": "TAP",
              "value": "battle-reload"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "4"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "5"
              }
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "2"
              }
            },
            {
              "type": "SET",
              "var": "ready",
              "value": "0"
            }
          ]
        },


        {
          "condition": {
            "is": "SCREEN", "value": "menu-missions-select"
          },
          "actions": [
            {
              "type": "MOVE",
              "value": "start"
            }
          ]
        }

      ]
    }

  }
}