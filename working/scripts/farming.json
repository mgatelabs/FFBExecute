    "_backup_to_home": {
      "name": "Include - Backup to Home Screen",
      "variables": {
        "backupDelay": {
          "value": "INT",
          "type": "0"
        }
      },
      "statements": [
        {
          "condition": {
            "not": "SCREEN",
            "value": "menu-home"
          },
          "actions": [
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "EVENT",
              "value": "back"
            },
            {
              "type": "RANDOM",
              "var": "backupDelay",
              "args": {
                "min": "2500",
                "max": "3500"
              }
            },
            {
              "type": "INFO",
              "value": "Returning home with ${backupDelay}ms delay"
            },
            {
              "type": "WAIT",
              "value": "2500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },
    "extra": {
      "name": "Extra (Wait)",
      "includes": [
        "_common-screen_saver",
        "_extra",
        "_extra_end"
      ]
    },
    "_extra": {
      "name": "Extra (Wait)",
      "variables": {
        "extraDelay": {
          "type": "INT",
          "value": "0"
        },
        "segment": {
          "type": "INT",
          "value": "0"
        }
      },
      "statements": [
        {
          "condition": {
            "var": "segment",
            "is":"EQUAL",
            "value": "0"
          },
          "actions": [
            {
              "condition": {
                "is":"EQUAL",
                "var": "extra_delay_minutes",
                "value": "-1"
              },
              "type":"CONTINUE"
            },
            {
              "type": "RANDOM",
              "var": "extraDelay",
              "args": {
                "min": "5",
                "max": "300"
              }
            },
            {
              "type": "MATH",
              "value": "(((${extra_delay_minutes}*5)*60)+${extraDelay})*1000",
              "var": "extraDelay"
            },
            {
              "type": "INFO",
              "value": "Extra time based delay for ${extraDelay}ms."
            },
            {
              "type": "SET",
              "var": "segment",
              "value": "1"
            }
          ]
        },
        {
          "condition": {
            "is": "GREATER",
            "var": "extraDelay",
            "value": "60000",
            "and": [
              {
                "is":"EQUAL",
                "var": "segment",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "ADD",
              "var": "extraDelay",
              "value": "-60000"
            },
            {
              "type": "INFO",
              "value": "Extra time based delay for 60000ms, remaining ${extraDelay}ms."
            },
            {"type": "WAIT", "value": "60000" },
            { "type": "CALL", "value": "@keepAlive" },
            {"type": "REPEAT"}
          ]
        },
        {
          "condition": {
            "is": "GREATER",
            "var": "extraDelay",
            "value": "0",
            "and": [
              {
                "is":"EQUAL",
                "var": "segment",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Extra time based delay for ${extraDelay}ms."
            },
            {"type": "WAIT", "value": "${extraDelay}" },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "SET",
              "var": "extraDelay",
              "value": "0"
            }
          ]
        },
        {
          "condition": {
            "not": "GREATER",
            "var": "extraDelay",
            "value": "0",
            "and": [
              {
                "is":"EQUAL",
                "var": "segment",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "segment",
              "value": "2"
            }
          ]
        }
      ]
    },
    "_extra_end": {
      "name": "Extra (Wait Ending)",
      "statements": [
        {
          "condition": {
            "not":"EQUAL",
            "var": "segment",
            "value": "1"
          },
          "actions": [
            { "type": "CALL", "value": "@keepAlive" },
            {"type": "MOVE", "value": "any_to_home", "args": {"toState": "FARM"}}
          ]
        }
      ]
    },

