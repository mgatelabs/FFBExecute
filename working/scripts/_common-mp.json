{
  "states": {
    "@unitHasMp": {
      "name": "Function - Does this unit have % MP?",
      "variables": {
        "percent": {
          "value": "50",
          "type": "FLOAT"
        },
        "index": {
          "value": "0",
          "type": "INT"
        },
        "w": {
          "value": "0",
          "type": "INT"
        },
        "x": {
          "value": "0",
          "type": "INT"
        },
        "mpWidth": {
          "value": "0",
          "type": "INT"
        },
        "y": {
          "value": "0",
          "type": "INT"
        },
        "r": {
          "value": "0",
          "type": "INT"
        },
        "percentWidthX": {
          "value": "0",
          "type": "FLOAT"
        }
      },
      "statements": [
        {
          "actions": [
            {
              "type": "COMPONENT", "value": "battle-unit-${index}-mp_bar", "args": {"w": "w", "x": "x", "y": "y"}
            },
            {
              "type": "MATH",
              "value": "${percent}/100.0",
              "var": "percent"
            },
            {
              "type": "MATH",
              "value": "(${percent}*${w})+1",
              "var": "percentWidthX"
            },
            {
              "type": "SET",
              "var": "mpWidth",
              "value": "${percentWidthX}"
            },
            {
              "type": "SET",
              "var": "mpWidth",
              "value": "${w}",
              "condition":{
                "is": "GREATER",
                "var": "mpWidth",
                "value": "${w}"
              }
            },
            {
              "type": "ADD",
              "var": "x",
              "value": "${mpWidth}"
            },
            {
              "type": "PIXEL",
              "args": {"x": "${x}", "y": "${y}", "r":"r"}
            },
            {
              "type": "RETURN",
              "value": "1",
              "condition": {
                "is": "GREATER",
                "var": "r",
                "value": "200"
              }
            },
            {
              "type": "RETURN",
              "value": "0"
            }
          ]
        }
      ]
    }
  }
}