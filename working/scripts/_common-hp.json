{
  "states": {
    "@unitHasHp": {
      "name": "Function - Does this unit have % Health?",
      "variables": {
        "percent": {
          "value": "75",
          "type": "FLOAT"
        },
        "index": {
          "value": "0",
          "type": "INT"
        },
        "w": {
          "value": "0",
          "type": "INT"
        },
        "x": {
          "value": "0",
          "type": "INT"
        },
        "hpWidth": {
          "value": "0",
          "type": "INT"
        },
        "y": {
          "value": "0",
          "type": "INT"
        },
        "g": {
          "value": "0",
          "type": "INT"
        },
        "b": {
          "value": "0",
          "type": "INT"
        },
        "percentWidthX": {
          "value": "0",
          "type": "FLOAT"
        }
      },
      "statements": [
        {
          "actions": [
            {
              "type": "COMPONENT", "value": "battle-unit-${index}-life_bar", "args": {"w": "w", "x": "x", "y": "y"}
            },
            {
              "type": "MATH",
              "value": "${percent}/100.0",
              "var": "percent"
            },
            {
              "type": "MATH",
              "value": "(${percent}*${w})+1",
              "var": "percentWidthX"
            },
            {
              "type": "SET",
              "var": "hpWidth",
              "value": "${percentWidthX}"
            },
            {
              "type": "SET",
              "var": "hpWidth",
              "value": "${w}",
              "condition":{
                "is": "GREATER",
                "var": "hpWidth",
                "value": "${w}"
              }
            },
            {
              "type": "ADD",
              "var": "x",
              "value": "${hpWidth}"
            },
            {
              "type": "PIXEL",
              "args": {"x": "${x}", "y": "${y}", "b":"b", "g":"g"}
            },
            {
              "type" : "FINEST",
              "value": "B = ${b}, G = ${g}"
            },
            {
              "type": "RETURN",
              "value": "1",
              "condition": {
                "is": "GREATER",
                "var": "g",
                "value": "200",
                "or": [
                  {
                    "is": "GREATER",
                    "var": "b",
                    "value": "200"
                  }
                ]
              }
            },
            {
              "type": "RETURN",
              "value": "0"
            }
          ]
        }
      ]
    }
  }
}