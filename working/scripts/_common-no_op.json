    "_common-reset": {
      "name": "Common - Reset",
      "statements": [
        {
          "condition": {
            "is": "BOOLEAN",
            "value": "true"
          },
          "actions": [
            {
              "type": "SET",
              "value": "0",
              "var": "_loops"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_seconds"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "MOVE",
              "value": "main"
            }
          ]
        }
      ]
    },
    "@keepAlive": {
      "name": "Function - Keep Alive",
      "statements": [
        {
          "actions": [
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "RETURN"
            }
          ]
        }
      ]
    }
