{
  "vars": [
    {
      "name": "player-level",
      "display": "Player Level",
      "value": "100",
      "type": "INT",
      "modify":"EDITABLE"
    },
    {
      "name": "min-energy",
      "value": "1",
      "type": "INT",
      "modify":"EDITABLE"
    }
  ],
  "imports": [
    "_common-no_op"
  ],
  "states": {

    "@maxEnergyValue": {
      "name": "Function - Determine Maximum Energy Value",
      "variables": {
        "energy": {
          "value": "0",
          "type": "INT"
        },
        "level": {
          "value": "0",
          "type": "INT"
        }
      },
      "statements": [
        {
          "actions": [
            {
              "type": "MATH",
              "var": "energy",
              "value": "40 + 100 + ((${player-level} - 100) / 2)",
              "condition": {
                "is": "GREATER",
                "var": "player-level",
                "value": "100",
                "or": [
                  {
                    "is": "EQUAL",
                    "var": "player-level",
                    "value": "100"
                  }
                ]
              }
            },
            {
              "type": "MATH",
              "var": "energy",
              "value": "40 + ${player-level}",
              "condition": {
                "is": "LESS",
                "var": "player-level",
                "value": "99"
              }
            },
            {
              "type": "RETURN",
              "value": "${energy}"
            }
          ]
        }
      ]
    },

    "@isMinEnergyAvailable": {
      "name": "Function - Is Minimum Energy Available",
      "variables": {
        "totalEnergy": {
          "value": "0",
          "type": "INT"
        },
        "w": {
          "value": "0",
          "type": "INT"
        },
        "x": {
          "value": "0",
          "type": "INT"
        },
        "energyX": {
          "value": "0",
          "type": "INT"
        },
        "y": {
          "value": "0",
          "type": "INT"
        },
        "b": {
          "value": "0",
          "type": "INT"
        },
        "level": {
          "value": "0",
          "type": "INT"
        },
        "energyFloatX": {
          "value": "0",
          "type": "FLOAT"
        }
      },
      "statements": [
        {
          "condition": {
            "is": "LESS",
            "var": "min-energy",
            "value": "1"
          },
          "actions": [
            {
              "type": "RETURN",
              "value": "1"
            }
          ]
        },
        {
          "actions": [
            { "type": "CALL", "value": "@maxEnergyValue", "var": "totalEnergy" },
            {
              "type": "COMPONENT", "value": "menu-energy_bar", "args": {"w": "w", "x": "x", "y": "y"}
            },
            {
              "type": "MATH",
              "value": "((${min-energy}/${totalEnergy})*${w})+1",
              "var": "energyFloatX"
            },
            {
              "type": "SET",
              "var": "energyX",
              "value": "${energyFloatX}"
            },
            {
              "type": "SET",
              "var": "energyX",
              "value": "${w}",
              "condition":{
                "is": "GREATER",
                "var": "energyX",
                "value": "${w}"
              }
            },
            {
              "type": "ADD",
              "var": "x",
              "value": "${energyX}"
            },
            {
              "type": "PIXEL",
              "args": {"x": "${x}", "y": "${y}", "b":"b"}
            },
            {
              "type": "RETURN",
              "value": "1",
              "condition": {
                "is": "GREATER",
                "var": "b",
                "value": "99"
              }
            },
            {
              "type": "RETURN",
              "value": "0"
            }
          ]
        }
      ]
    }

  }
}