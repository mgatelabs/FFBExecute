            {
              "type": "SET",
              "var": "refresh-farm",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "min-energy",
              "value": "1"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
